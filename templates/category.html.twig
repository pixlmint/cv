{% extends 'base.html.twig' %}

{% block title %}{{ category_name }}{% endblock %}

{% block content %}
<h1>{{ category_name }}</h1>
<a href="/"><- Home</a>
{% if category_text is defined %}
    {{ category_text|raw }}
{% endif %}

<div class="card-list">
    {% for page in pages %}
        {% include 'post-card.html.twig' with {page: page} %}
    {% endfor %}
</div>
{% endblock %}
